{include file="documentHeader"}<head>	<title>{lang}wcf.clique.comment.clique{/lang} - {lang}{PAGE_TITLE}{/lang}</title>	{include file='headInclude' sandbox=false}	<script type="text/javascript" src="{@RELATIVE_WCF_DIR}js/MultiPagesLinks.class.js"></script>	<script type="text/javascript">		//<![CDATA[		var INLINE_IMAGE_MAX_WIDTH = {@INLINE_IMAGE_MAX_WIDTH};		//]]>	</script>	<script type="text/javascript" src="{@RELATIVE_WCF_DIR}js/ImageResizer.class.js"></script></head><body{if $templateName|isset} id="tpl{$templateName|ucfirst}"{/if}>{* --- quick search controls --- *}{assign var='searchFieldTitle' value='{lang}wcf.clique.general.search{/lang}'}{assign var='searchFieldOptions' value=false}{capture assign=searchHiddenFields}	<input type="hidden" name="types[]" value="clique" />{/capture}{* --- end --- *}{include file='header' sandbox=false}<div id="main">	<ul class="breadCrumbs">		<li><a href="index.php?page=Index{@SID_ARG_2ND}"><img src="{icon}indexS.png{/icon}" alt="" /> <span>{lang}{PAGE_TITLE}{/lang}</span></a> &raquo;</li>		<li><a href="index.php?page=CliqueOverview{@SID_ARG_2ND}"><img src="{icon}cliqueS.png{/icon}" alt="" width="16" height="16" /> <span>{lang}wcf.clique.general.name.singulary{/lang}</span></a> &raquo;</li>	</ul>	{if $userMessages|isset}{@$userMessages}{/if}	{include file="cliqueDetailHeader" showRaiting=true}	<div class="border content">		<div class="container-1 guestBook">						{if !$comments|count}<p>{lang}wcf.clique.comment.noone{/lang}</p>{/if}						<div class="contentHeader">				{pages print=true assign=pagesOutput link="index.php?page=CliqueComments&cliqueID=$cliqueID&pageNo=%d"|concat:SID_ARG_2ND_NOT_ENCODED}				{if $cliquePermissions->getCliquePermission('canMakeComments') && $this->user->getPermission('user.clique.comments.canMakeComment')}					<div class="largeButtons">						<ul>							<li>								<a href="index.php?form=CliqueAddComment&amp;cliqueID={@$cliqueID}{@SID_ARG_2ND}" title="{lang}wcf.clique.comment.insert{/lang}"><img src="{icon}messageAddM.png{/icon}" alt="" /> <span>{lang}wcf.clique.comment.insert{/lang}</span></a>							</li>						</ul>					</div>				{/if}			</div>						<div class="guestBookInner">				{assign var='messageNumber' value=$items-$startIndex+1}				{foreach from=$comments item=comment}										<div class="message">						<div class="messageInner {if $comment->time > 0}{cycle advance=false values='container-1,container-2'}{else}{cycle values='container-1,container-2'}{/if}">							<a id="entry{$comment->commentID}"></a>							<div class="messageHeader">								<p class="messageCount">									<a href="index.php?page=CliqueComments&amp;cliqueID={$comment->cliqueID}{@SID_ARG_2ND}#entry{$comment->commentID}" title="{lang}wcf.clique.comment.permalink{/lang}" class="messageNumber">{#$messageNumber}</a>								</p>								<div class="containerIcon">									<a href="index.php?page=User&amp;userID={$comment->userID}{@SID_ARG_2ND}" title="{lang username=$comment->username}wcf.clique.comment.viewProfile{/lang}">										{if $comment->getAvatar()}											{assign var=x value=$comment->getAvatar()->setMaxSize(24, 24)}											<img alt="" src="{$comment->getAvatar()->getURL()}" style="width: {$comment->getAvatar()->width}px; height: {$comment->getAvatar()->height}px;" /><br />										{else}											<img alt="" src="{RELATIVE_WCF_DIR}images/avatars/avatar-default.png" style="width: 24px; height: 24;" /><br />										{/if}									</a>								</div>								<div class="containerContent">									<p class="light smallFont">{@$comment->time|time}</p>									<p class="light smallFont">{lang}wcf.clique.comment.by{/lang} {if $comment->userID}<a href="index.php?page=User&amp;userID={$comment->userID}{@SID_ARG_2ND}" title="{lang username=$comment->username}wcf.clique.comment.viewProfile{/lang}">{$comment->username}</a>{else}{$comment->username}{/if}</p>								</div>							</div>							<div class="messageBody" id="cliqueComments{@$comment->commentID}">								{@$comment->message}							</div>							<div class="messageFooter">								<div class="smallButtons">									<ul id="cliqueCommentsButton{$comment->commentID}">										<li class="extraButton"><a href="#top" title="{lang}wcf.global.scrollUp{/lang}"><img src="{icon}upS.png{/icon}" alt="" /> <span class="hidden">{lang}wcf.global.scrollUp{/lang}</span></a></li>										{if $cliquePermissions->getCliquePermission('canEditComments') || ($this->user->getPermission('user.clique.comments.canEditOwnComments') && $comment->userID == $this->user->userID)}<li><a href="index.php?form=CliqueEditComment&amp;cliqueID={$comment->cliqueID}&amp;commentID={@$comment->commentID}{@SID_ARG_2ND}#profileContent" title="{lang}wcf.global.button.edit{/lang}"><img src="{icon}editS.png{/icon}" alt="" /> <span>{lang}wcf.global.button.edit{/lang}</span></a></li>{/if}										{if $cliquePermissions->getCliquePermission('canDeleteComments') || ($this->user->getPermission('user.clique.comments.canDeleteOwnComments') && $comment->userID == $this->user->userID)}<li><a href="index.php?action=CliqueCommentDelete&amp;cliqueID={$comment->cliqueID}&amp;commentID={$comment->commentID}&amp;t={@SECURITY_TOKEN}{@SID_ARG_2ND}" onclick="return confirm('{lang}wcf.clique.comment.delete.sure{/lang}')" title="{lang}wcf.global.button.delete{/lang}"><img src="{icon}deleteS.png{/icon}" alt="" /> <span>{lang}wcf.global.button.delete{/lang}</span></a></li>{/if}									</ul>								</div>							</div>							<hr />						</div>					</div>					{assign var='messageNumber' value=$messageNumber-1}				{/foreach}			</div>						{if $comments|count > 0}				<div class="contentFooter">					{@$pagesOutput}					{if $cliquePermissions->getCliquePermission('canMakeComments') && $this->user->getPermission('user.clique.comments.canMakeComment')}						<div class="largeButtons">							<ul>								<li>									<a href="index.php?form=CliqueAddComment&amp;cliqueID={@$cliqueID}{@SID_ARG_2ND}" title="{lang}wcf.clique.comment.insert{/lang}"><img src="{icon}messageAddM.png{/icon}" alt="" /> <span>{lang}wcf.clique.comment.insert{/lang}</span></a>								</li>							</ul>						</div>					{/if}				</div>			{/if}		</div>	</div></div>{include file='footer' sandbox=false}</body></html>